<?xml version="1.0" encoding="utf-8"?>
<com.twocities.pomodoro.widget.DigitalClock xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/digital_clock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/screen_alarm_background" >

    <TextView
        android:id="@+id/digital_clock_minute"
        style="@style/big_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:singleLine="true"
        android:textColor="@color/screen_alarm_text_color" />

    <TextView
        android:id="@+id/digital_clock_second"
        style="@style/big_thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:ellipsize="none"
        android:singleLine="true"
        android:textColor="@color/screen_alarm_text_color" />

</com.twocities.pomodoro.widget.DigitalClock>