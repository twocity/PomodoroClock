<?xml version="1.0" encoding="utf-8"?>
<com.twocities.pomodoro.widget.swipelistview.SwipeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:padding="10dp"
        android:background="@color/swipe_back_item_background_done"
        android:tag="back" >

        <ImageView android:id="@+id/todo_left_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/action_done" />

        <ImageView android:id="@+id/todo_right_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/action_discard" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/front"
        android:tag="front"
	    android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_todo_title"
            style="@style/todo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_todo_description"
            style="@style/todo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.twocities.pomodoro.widget.swipelistview.SwipeLayout>